<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginHorizontal="30dp">

    <ImageView
        android:id="@+id/iv_login_viewpager_text1"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:src="@drawable/viewpager_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login_viewpager_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/login_viewpager_text1"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/iv_login_viewpager_text1"
        app:layout_constraintStart_toStartOf="@id/iv_login_viewpager_text1"
        app:layout_constraintTop_toBottomOf="@id/iv_login_viewpager_text1" />

    <ImageView
        android:id="@+id/iv_login_viewpager_img1"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/viewpager_img1"
        app:layout_constraintEnd_toEndOf="@id/iv_login_viewpager_text1"
        app:layout_constraintStart_toStartOf="@id/iv_login_viewpager_text1"
        app:layout_constraintTop_toBottomOf="@id/tv_login_viewpager_text1" />


</androidx.constraintlayout.widget.ConstraintLayout>
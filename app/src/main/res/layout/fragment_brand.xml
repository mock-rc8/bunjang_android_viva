<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_brand_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="브랜드를 팔로우하고\n매일 새소식을 받아보세요"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_brand_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="팔로우한 브랜드 소식을 피드에서 확인해보세요."
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="@id/tv_brand_follow"
                app:layout_constraintStart_toStartOf="@id/tv_brand_follow"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_follow" />

            <ImageView
                android:id="@+id/iv_brand_ad"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_brand_ad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_feed" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_color_red"
                android:text="브랜드 보러가기"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/iv_brand_ad"
                app:layout_constraintStart_toStartOf="@id/iv_brand_ad"
                app:layout_constraintTop_toBottomOf="@id/iv_brand_ad" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
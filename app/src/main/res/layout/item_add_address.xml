<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/btn_product_event"
    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp">

    <TextView
        android:id="@+id/tv_item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_address_delete"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_item"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_delete"
        app:layout_constraintEnd_toStartOf="@+id/tv_address_delete"
        app:layout_constraintTop_toTopOf="@id/tv_address_delete" />

    <TextView
        android:id="@+id/tv_address_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/item_address_correct"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_delete"
        app:layout_constraintEnd_toStartOf="@id/view_item"
        app:layout_constraintTop_toTopOf="@id/tv_address_delete" />

    <TextView
        android:id="@+id/tv_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="주소"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_item_address_name"
        app:layout_constraintTop_toBottomOf="@id/tv_item_address_name" />

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="디테일 주소"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_item_address_name"
        app:layout_constraintTop_toBottomOf="@id/tv_item_address"/>

    <TextView
        android:id="@+id/tv_address_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_address_detail"
        app:layout_constraintStart_toStartOf="@id/tv_address_detail"
        android:layout_marginTop="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>